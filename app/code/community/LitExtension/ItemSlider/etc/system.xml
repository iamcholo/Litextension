<?xml version="1.0"?>
<config>
     <tabs>
        <litextension translate="label" module="itemslider">
            <label>LitExtension</label>
            <sort_order>500</sort_order>
        </litextension>
     </tabs>
    <sections>
        <itemslider translate="label" module="itemslider">
            <label>Item Slider</label>
            <tab>litextension</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1040</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <itemslider translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <showproduct translate="label">
                            <label>Show Product Price</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </showproduct>
                        <itemimagewidth translate="label">
                            <label>Item Image Width</label>
                            <frontend_type>text</frontend_type>
                            <comment>px</comment>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </itemimagewidth>
                        <itemimageheight translate="label">
                            <label>Item Image Height</label>
                            <frontend_type>text</frontend_type>
                            <comment>px</comment>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </itemimageheight>
                        <items_per_page translate="label">
                            <label>Items Per Page</label>
                            <sort_order>80</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>itemslider/system_config_source_itemperpage</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </items_per_page>
                        <linktype translate="label">
                            <label>On Click Link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>itemslider/system_config_source_linktype</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </linktype>
                        <style translate="label">
                            <label>Tab Style</label>
                            <frontend_type>select</frontend_type>
                            <source_model>itemslider/system_config_source_style</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </style>
                    </fields>
                </itemslider>
                <style1 translate="label">
                    <label>Style 1 Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <style1_line_width translate="label">
                            <label>Line Width</label>
                            <frontend_type>text</frontend_type>
                            <comment>min 1px</comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </style1_line_width>
                    </fields>
                </style1>
                <style2 translate="label">
                    <label>Style 2 Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <style2_line_width translate="label">
                            <label>Line Width</label>
                            <frontend_type>text</frontend_type>
                            <comment>default 2px</comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </style2_line_width>
                        <style2_group_width translate="label">
                            <label>Text Padding</label>
                            <frontend_type>text</frontend_type>
                            <comment>default 6px</comment>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </style2_group_width>
                        <style2_line_color translate="label">
                            <label>Line Color</label>
                            <frontend_type>text</frontend_type>
                            <comment>default #cecece</comment>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </style2_line_color>
                        <style2_group_background_color translate="label">
                            <label>Group Background Color</label>
                            <frontend_type>text</frontend_type>
                            <comment> default #cecece</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </style2_group_background_color>
                    </fields>
                </style2>
            </groups>
        </itemslider>
    </sections>
</config>
