<config>
    <tabs>
        <litextension translate="label">
            <label>LitExtension</label>
            <sort_order>2000</sort_order>
        </litextension>
    </tabs>

    <sections>
        <lewysiwyg>
            <label>Wysiwyg Editor Pro</label>
            <tab>litextension</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1090</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label comment">
                            <label>Enable WYSIWYG Editor</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <editormenu translate="label comment">
                            <label>Show Editor Menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </editormenu>
                        <layout translate="label comment">
                            <label>Layout</label>
                            <frontend_type>select</frontend_type>
                            <source_model>lewysiwyg/system_config_source_layout</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </layout>
                    </fields>
                </general>
            </groups>
            <groups>
                <option translate="label">
                    <label>Custom Format</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enablecf translate="label comment">
                            <label>Enable Custom Format</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablecf>
                        <customformats translate="label comment">
                            <label>Custom Formats</label>
                            <comment><![CDATA[]]></comment>
                            <frontend_model>lewysiwyg/adminhtml_system_config_form_field_options</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customformats>
                    </fields>
                </option>
            </groups>
        </lewysiwyg>
    </sections>
</config>